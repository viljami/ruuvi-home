# Ruuvi Home Environment Configuration
# Generated automatically by setup script
# Edit these values according to your setup

# Database Configuration
POSTGRES_USER={{ database.user }}
POSTGRES_PASSWORD={{ database.password }}
POSTGRES_DB={{ database.name }}
DATABASE_URL=postgresql://{{ database.user }}:{{ database.password }}@{{ database.host }}:{{ database.port }}/{{ database.name }}

# MQTT Configuration
MQTT_HOST={{ mqtt.host }}
MQTT_PORT={{ mqtt.port }}
MQTT_USERNAME={{ mqtt.username }}
MQTT_PASSWORD={{ mqtt.password }}

# API Configuration
API_PORT={{ ports.api }}
API_HOST=0.0.0.0
NODE_ENV=production

# Frontend Configuration
FRONTEND_PORT={{ ports.frontend }}

# Webhook Configuration
WEBHOOK_SECRET={{ webhook.secret }}
WEBHOOK_PORT={{ ports.webhook }}

# System Configuration
TZ={{ system.timezone }}
LOG_LEVEL={{ system.log_level }}

# Security Configuration
# Change these to secure random values in production
JWT_SECRET={{ database.password }}_jwt_secret
SESSION_SECRET={{ database.password }}_session_secret

# File Paths
PROJECT_DIR={{ project.directory }}
DATA_DIR={{ directories.data }}
LOG_DIR={{ directories.logs }}
BACKUP_DIR={{ directories.backups }}

# Feature Flags
ENABLE_BACKUP={{ features.backup_cron | lower }}
ENABLE_MONITORING={{ features.monitoring | lower }}

# Docker Configuration
COMPOSE_PROJECT_NAME=ruuvi-home
COMPOSE_FILE={{ project.directory }}/docker-compose.yml

# Ruuvi Sensor Configuration
RUUVI_SCAN_INTERVAL=60
RUUVI_DATA_RETENTION_DAYS=365

# Network Configuration
INTERNAL_NETWORK=ruuvi-internal
PUBLIC_NETWORK=ruuvi-public

# Backup Configuration
BACKUP_RETENTION_DAYS={{ backup.retention_days }}
BACKUP_SCHEDULE={{ backup.schedule }}

# Health Check Configuration
HEALTH_CHECK_INTERVAL={{ monitoring.health_check_interval }}

# Alert Thresholds
CPU_THRESHOLD={{ monitoring.alert_thresholds.cpu_usage }}
MEMORY_THRESHOLD={{ monitoring.alert_thresholds.memory_usage }}
DISK_THRESHOLD={{ monitoring.alert_thresholds.disk_usage }}