# Ruuvi Home Setup Configuration
# This file contains all configurable parameters for the Pi setup process

# User Configuration
# Auto-detect from SUDO_USER, fallback to 'pi'
RUUVI_USER="${SUDO_USER:-pi}"

# Directory Configuration
PROJECT_DIR="/home/${RUUVI_USER}/ruuvi-home"
DATA_DIR="${PROJECT_DIR}/data"
LOG_DIR="/var/log/ruuvi-home"
DEPLOY_DIR="${PROJECT_DIR}/deploy"
BACKUP_DIR="${PROJECT_DIR}/backups"
CONFIG_DIR="${PROJECT_DIR}/config"

# Service Configuration
WEBHOOK_PORT="${WEBHOOK_PORT:-9000}"
WEBHOOK_SECRET="${WEBHOOK_SECRET:-}"

# Database Configuration
DB_USER="ruuvi"
DB_NAME="ruuvi_home"
DB_PORT="5432"

# Docker Configuration
DOCKER_COMPOSE_VERSION="2.24.0"
DOCKER_LOG_MAX_SIZE="10m"
DOCKER_LOG_MAX_FILE="3"

# Backup Configuration
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# System Configuration
SHELL_DEFAULT="/usr/bin/fish"
TIMEZONE="${TZ:-Europe/Helsinki}"

# Network Configuration
MOSQUITTO_PORT="1883"
FRONTEND_PORT="80"
API_PORT="3000"

# Logging Configuration
LOG_LEVEL="${LOG_LEVEL:-info}"
LOG_FORMAT="%(asctime)s - %(levelname)s - %(message)s"

# Feature Flags
ENABLE_FISH_SHELL="${ENABLE_FISH_SHELL:-true}"
ENABLE_BACKUP_CRON="${ENABLE_BACKUP_CRON:-true}"
ENABLE_MONITORING="${ENABLE_MONITORING:-true}"
ENABLE_FIREWALL="${ENABLE_FIREWALL:-true}"

# Colors for output
COLOR_GREEN='\033[0;32m'
COLOR_YELLOW='\033[1;33m'
COLOR_RED='\033[0;31m'
COLOR_NC='\033[0m'